# Application Settings
APP_NAME=Autonomous Agent Pro
APP_VERSION=1.0.0
DEBUG=False
LOG_LEVEL=INFO

# Server Configuration
HOST=0.0.0.0
PORT=8000
RELOAD=False
WORKERS=4

# LLM Configuration
DEFAULT_LLM_PROVIDER=deepseek
LLM_MODEL=deepseek-chat
LLM_TEMPERATURE=0.7
LLM_MAX_TOKENS=4096
LLM_TIMEOUT=60

# API Keys
DEEPSEEK_API_KEY=your_deepseek_api_key_here
OPENAI_API_KEY=your_openai_api_key_here
ANTHROPIC_API_KEY=your_anthropic_api_key_here
GROQ_API_KEY=your_groq_api_key_here

# Execution Settings
EXECUTION_MODE=safe
EXECUTION_TIMEOUT=300
MAX_RETRIES=3
RETRY_DELAY=2
SANDBOX_ENABLED=True

# Code Execution
ALLOWED_LANGUAGES=python,javascript,shell,bash,java,r,ruby
RESTRICTED_MODULES=os,sys,subprocess,socket
MAX_OUTPUT_LENGTH=10000

# Database
DATABASE_URL=mysql+pymysql://user:password@localhost/agent_db
DATABASE_POOL_SIZE=10
DATABASE_MAX_OVERFLOW=20

# Redis Cache
REDIS_URL=redis://localhost:6379/0
CACHE_TTL=3600

# Security
SECRET_KEY=your_secret_key_change_in_production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# CORS
CORS_ORIGINS=http://localhost:3000,http://localhost:5173
CORS_CREDENTIALS=True
CORS_METHODS=*
CORS_HEADERS=*

# File Storage
UPLOAD_DIR=./uploads
MAX_UPLOAD_SIZE=104857600

# Vision & Screen Control
ENABLE_VISION=True
ENABLE_SCREEN_CONTROL=True
SCREEN_CAPTURE_INTERVAL=5

# Logging
LOG_FILE=./logs/agent.log
LOG_MAX_BYTES=10485760
LOG_BACKUP_COUNT=5

# Monitoring & Telemetry
ENABLE_TELEMETRY=False
SENTRY_DSN=

# Frontend
VITE_API_URL=http://localhost:8000
VITE_WS_URL=ws://localhost:8000
